// Создаем исходный массив
const array = [1, 2, 3, 4, 5];

// Запрашиваем значение у пользователя
const userInput = prompt("Введите значение для поиска:");

// Ищем значение в массиве
const index = array.indexOf(Number(userInput));

// Проверяем, найдено ли значение
if (index !== -1) {
  // Запрашиваем новое значение у пользователя
  const newValue = prompt("Введите новое значение:");

  // Изменяем найденное значение в массиве
  array[index] = Number(newValue);

  console.log("Массив после изменения:", array);
} else {
  console.log("Значение не найдено в массиве.");
}
